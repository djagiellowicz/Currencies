<h1>Currency conversion</h1>
<br/>
<div class="container">
        <form asp-controller="Currency" asp-action="ShowResultCurrencyConversion" method="post">
            <div class="form-group">
                <div class="form-control">
                    <label>Date</label>
                    <input type="date" name="date"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <label>First currency</label>
                    <input type="text" name="firstCurrency"/>
                    <span asp-validation-for="FirstCurrency" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <label>Second currency</label>
                    <input type="text" name="secondCurrency"/>
                    <span asp-validation-for="SecondCurrency" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <label>Amount currency</label>
                    <input type="number" name="amountFirstCurrency"/>
                    <span asp-validation-for="AmountFirstCurrency" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Show</button>
        </form>
</div>