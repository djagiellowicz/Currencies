@using Microsoft.AspNetCore.Identity
@using WalutyBusinessLogic.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

    <ul class="navbar-nav px-3 list-group list-group-horizontal">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item px-2">
                <a class="nav-link btn btn-link" asp-controller="Favorites" asp-action="Index">Favorite Currencies</a>
            </li>

            <li class="nav-item px-2">
                <span class="nav-link btn btn-link">Hello @UserManager.GetUserName(User)!</span>
                <!-- Should be used in the future if we want to allow password change <a id="manage" class="nav-link btn btn-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>-->
            </li>

            <li class="nav-item px-2">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item px-2">
                <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>

            <li class="nav-item px-2">
                <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
