@using WalutyBusinessLogic.Models.DTO
@using X.PagedList
@model IPagedList<UserDTO>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Roles</th>
        </tr>
        <tr></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                @foreach (var role in user.Roles)
                {
                    <td>@role</td>
                }
            </tr>
        }
    </tbody>
</table>