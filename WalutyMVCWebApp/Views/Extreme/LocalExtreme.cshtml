<h1>Local extreme</h1>

<div class="container">
    <form asp-antiforgery="true" asp-controller="Extreme" asp-action="Index" method="post">
        <div class="form-group">
            <div class="form-control">
                <label>Currency</label>
                <input type="text" asp-action="nameCurrency" name="nameCurrency" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-control">
                <label>Start date</label>
                <input type="date" asp-action="nameCurrency" name="nameCurrency" />
            </div>
        </div>
        <div class="form-group">
            <div class="form-control">
                <label>End date</label>
                <input type="date" asp-action="nameCurrency" name="nameCurrency" />
            </div>
        </div>
        <button type="submit" class="btn btn-success">Show</button>
    </form>

    <output type="text" asp-action="GlobalExtreme"> </output>
</div>