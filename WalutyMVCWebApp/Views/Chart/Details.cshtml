@model List<WalutyBusinessLogic.LoadingFromFile.CurrencyRecord>
@{
    ViewData["Title"] = "Details";
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.js"></script>
    <script src="/js/chart.js"></script>
}


<div class="h-50 w-50 d-inline-block">
    <canvas id="CurrencyChart" width="400" height="400"></canvas>
</div>

<script>
    createChart(@Json.Serialize(Model.Select(x => x.Date.ToShortDateString())),
                @Json.Serialize(Model.Select(x => x.Close)),
                 document.getElementById('CurrencyChart'));
</script>